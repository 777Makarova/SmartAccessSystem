{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div style="padding-top: 150px; ">
    <span>
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>DateCreate</th>
                <th>DateUpdate</th>
{#                <th>actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr style="height: 100px">
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class="w-25">{{ user.password }}</td>
                <td>{{ user.dateCreate ? user.dateCreate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.dateUpdate ? user.dateUpdate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
{#                    <a href="{{ path('app_user_user_show', {'id': user.id}) }}">show</a>#}
{#                    <a href="{{ path('app_user_user_edit', {'id': user.id}) }}">edit</a>#}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
    </span>
    </div>

{#    <a href="{{ path('app_user_user_new') }}">Create new</a>#}
{% endblock %}
